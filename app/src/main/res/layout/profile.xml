<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/orangebackground" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingTop="30dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="60dp">
           
            <ImageView
            android:id="@+id/gotechplus"
            android:src="@drawable/gotechplus"
            android:layout_width="250dp"
            android:layout_height="150dp"/>
                        
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="60dp">
            
              <ImageView
            android:id="@+id/gotechface"
            android:src="@drawable/gotechface"
            android:layout_width="250dp"
            android:layout_height="150dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp" >
              
                 <ImageView
            android:id="@+id/gotehtwitt"
            android:src="@drawable/gotehtwitt"
            android:layout_width="250dp"
            android:layout_height="150dp"/>
                 
        </TableRow>
    </TableLayout>

</LinearLayout>
